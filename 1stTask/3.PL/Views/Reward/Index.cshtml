
@model ReModel
@{
    ViewBag.Title = "Reward";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User</h2>

<div id="AddReward">

    <button class="btn btn-info" type="button" id="addUser"
            onclick="location.href='@Url.Action("Index", "AddReward")'">
        Add Reward
    </button>
</div>
<hr />

<div id="UsersList">
    <table style="width:45%">
        <tr>
            <th></th>
            <th>Title</th>
            <th>Description</th>
        </tr>
        @if (Model != null)
        {
            if (Model.Rewards != null)
            {
                foreach (var item in Model.Rewards)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(
                                "Del",
                                "Del",
                                "Reward",
                                new { item.Id },
                                new { @class = "btn btn-info" }) 
                    </td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                </tr>
                }
            }
        }
    </table>
</div>






