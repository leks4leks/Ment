
@model ReModel
@{
    ViewBag.Title = "Reward";
    Layout = "~/Views/Shared/RewardLayout.cshtml";
}

<div id="AddReward">

    <button class="btn btn-info" type="button" id="addUser"
            onclick="location.href='@Url.Action("Index", "WorkWithReward")'">
        Add Reward
    </button>
</div>
<hr />

<div id="UsersList">
    <table style="width:45%">
        <tr>
            <th></th>
            <th></th>
            <th>Title</th>
            <th>Description</th>
            <th>Image</th>
        </tr>
        @if (Model != null)
        {
            if (Model.Rewards != null)
            {
                foreach (var item in Model.Rewards)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(
                                "Del",
                                "Del",
                                "Reward",
                                new { item.Id },
                                new { @class = "btn btn-info" }) 
                    </td>
                    <td>
                        @Html.ActionLink(
                            "Edit",
                            "Index",
                            "WorkWithReward",
                            new { item.Id },
                            new { @class = "btn btn-info" })
                    </td>             
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td><img src="@item.FilePath" width="50" height="50"/>
                </tr>
                }
            }
        }
    </table>
</div>


@section side {
    <strong> /Reward</strong>
}
