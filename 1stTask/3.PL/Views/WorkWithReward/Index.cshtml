@model Reward
@{
    ViewBag.Title = "Add Reward";
    Layout = "~/Views/Shared/RewardLayout.cshtml";
}

@using (Html.BeginForm("Add", "WorkWithReward", FormMethod.Post))
{

    <div id="AddReward">
        <table style="width:40%">
            <tr>
                <td>
                    Title:
                    <input type="text" width="20" class="text-info" name="Model.Title" value="@Model.Title"/>
                </td>
                <td>
                    Desc:
                    <input type="text" width="20" class="text-info" name="Model.Description" value="@Model.Description"/>
                    <input type="hidden" width="20" class="text-info" name="Model.Id" value="@Model.Id" />
                </td>
            </tr>
            <tr>
                <td>
                    <button type="submit" class="btn btn-info" style="margin:5px 0px 0px 0px">Add/Edit Reward</button>
                </td>
            </tr>
        </table>
    </div>
}

<br />
@if (Model.Id != 0)
{
    using (Html.BeginForm("AddRewardImage", "WorkWithReward", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div id="AddUserImage">
            <table style="width:40%">
                <tr>
                    <td>
                        <input type="file" name="file" class="btn btn-warning" />
                        <input type="hidden" width="20" class="text-info" name="Model.Id" value="@Model.Id" />
                    </td>
                    <td rowspan="2">
                        <img src="@Model.FilePath" width="85" height="85" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <button type="submit" class="btn btn-info" style="margin:5px 0px 0px 0px; width:150px">Add Image</button>
                        <button type="submit" class="btn btn-danger" style="margin:5px 0px 0px 0px">Delete exist Image</button>
                    </td>
                </tr>

            </table>
        </div>
    }
}

    @section side {
        <strong> /Reward/Add&Edit Reward</strong>
    }
